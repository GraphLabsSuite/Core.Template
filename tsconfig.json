{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015.promise"
    ],
    "types": [
      "node"
    ],
    "target": "es5",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}