{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node"
  },
  "libs": [
    "es6"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}